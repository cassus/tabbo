{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"lib": [
			"es6",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		],
		"allowJs": true,
		"checkJs": false,
		"sourceMap": true,
		"outDir": "./dist/scripts",
		"rootDir": "./",

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		"esModuleInterop": true,
		"moduleResolution": "node"
	}
}
