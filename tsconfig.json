{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"lib": [
			"es6",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		],
		"allowJs": true,
		"checkJs": false,
		"outDir": "./dist/unpacked/scripts",
		"sourceMap": false,
		"inlineSources": true,
		"inlineSourceMap": true,

		"strict": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,

		"moduleResolution": "node",
		"listFiles": false
	},
	"include": [
		"src/scripts/**/*.ts",
		"node_modules/webextension-polyfill-ts/src/**/*.ts"
	]
}
